@using ShopABC.Areas.Dashboard.Models;
@using PagedList;

@{
    ViewBag.Title = "Sản phẩm";
    IPagedList<sp_ds_SanPham_public_Result> dssp = ViewData["list_SanPham"] as IPagedList<sp_ds_SanPham_public_Result>;
}

@section Breadcum {
    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h4>@ViewBag.Title</h4>
                        <div class="breadcrumb__links">
                            <a href='@Url.Action("Index", "Home")'>Trang chủ</a>
                            <span>@ViewBag.Title</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->
}

<!-- Shop Section Begin -->
<section class="shop spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="shop__sidebar">
                    <div class="shop__sidebar__search">
                        @using (Html.BeginForm("TimKiem", "SanPham", FormMethod.Get))
                        {
                            <input name="search" type="text" placeholder="Tìm kiếm...">
                            <button type="submit"><span class="icon_search"></span></button>
                        }
                    </div>
                    <div class="shop__sidebar__accordion">
                        <div class="accordion" id="accordionExample">
                            <div class="card">
                                <div class="card-heading">
                                    <a data-toggle="collapse" data-target="#collapseOne">Loại</a>
                                </div>
                                <div id="collapseOne" class="collapse" data-parent="#accordionExample">
                                    <div class="card-body">
                                        <div class="shop__sidebar__categories">
                                            <ul class="nice-scroll">
                                                @foreach (LoaiSP l in ShopABC_SanPham.get_LoaiSP())
                                                {
                                                    <li><a href='@Url.Action("LocSanPham_TheoLoai", "SanPham", new { loai = l.TenLoai, page = 1 })'>@l.TenLoai</a></li>
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-heading">
                                    <a data-toggle="collapse" data-target="#collapseTwo">Hãng</a>
                                </div>
                                <div id="collapseTwo" class="collapse" data-parent="#accordionExample">
                                    <div class="card-body">
                                        <div class="shop__sidebar__brand">
                                            <ul>
                                                @foreach (HangSX hsx in ShopABC_SanPham.get_HangSX())
                                                {
                                                    <li><a href='@Url.Action("LocSanPham_TheoHSX", "SanPham", new { hsx = hsx.TenHSX, page = 1 })'>@hsx.TenHSX</a></li>
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-heading">
                                    <a data-toggle="collapse" data-target="#collapseThree">Giá bán</a>
                                </div>
                                <div id="collapseThree" class="collapse" data-parent="#accordionExample">
                                    <div class="card-body">
                                        <div class="shop__sidebar__price">
                                            <ul>
                                                <li><a href='@Url.Action("LocSanPham_TheoGiaBan", "SanPham", new { giaban = "100000-500000", page = 1 })'>100.000 đ - 500.000 đ</a></li>
                                                <li><a href='@Url.Action("LocSanPham_TheoGiaBan", "SanPham", new { giaban = "500000-1000000", page = 1 })'>500.000 đ - 1.000.000 đ</a></li>
                                                <li><a href='@Url.Action("LocSanPham_TheoGiaBan", "SanPham", new { giaban = "gt1000000", page = 1 })'>&gt; 1.000.000 đ</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-heading">
                                    <a data-toggle="collapse" data-target="#collapseFive">Màu sắc</a>
                                </div>
                                <div id="collapseFive" class="collapse" data-parent="#accordionExample">
                                    <div class="card-body">
                                        <div class="shop__sidebar__color">
                                            <label class="c-1" for="sp-1">
                                                <input type="radio" id="sp-1">
                                            </label>
                                            <label class="c-2" for="sp-2">
                                                <input type="radio" id="sp-2">
                                            </label>
                                            <label class="c-3" for="sp-3">
                                                <input type="radio" id="sp-3">
                                            </label>
                                            <label class="c-4" for="sp-4">
                                                <input type="radio" id="sp-4">
                                            </label>
                                            <label class="c-5" for="sp-5">
                                                <input type="radio" id="sp-5">
                                            </label>
                                            <label class="c-6" for="sp-6">
                                                <input type="radio" id="sp-6">
                                            </label>
                                            <label class="c-7" for="sp-7">
                                                <input type="radio" id="sp-7">
                                            </label>
                                            <label class="c-8" for="sp-8">
                                                <input type="radio" id="sp-8">
                                            </label>
                                            <label class="c-9" for="sp-9">
                                                <input type="radio" id="sp-9">
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-heading">
                                    <a data-toggle="collapse" data-target="#collapseSix">Từ khóa</a>
                                </div>
                                <div id="collapseSix" class="collapse" data-parent="#accordionExample">
                                    <div class="card-body">
                                        <div class="shop__sidebar__tags">
                                            @foreach (LoaiSP i in ShopABC_SanPham.get_LoaiSP())
                                            {
                                                <a href='@Url.Action("LocSanPham_TheoLoai", "SanPham", new { loai = i.TenLoai, page = 1 })'>@i.TenLoai</a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="shop__product__option">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="shop__product__option__left">
                                <p>Hiển thị @dssp.Count tổng số @dssp.TotalItemCount sản phẩm</p>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="shop__product__option__right">
                                <p>Sắp xếp giá </p>
                                <select>
                                    <option value="tangdan">Tăng dần</option>
                                    <option value="giamdan">Giảm dần</option>
                                    <option value="macdinh" selected>Mặc định</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    @foreach (sp_ds_SanPham_public_Result sp in dssp)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="product__item">
                                <div class="product__item__pic set-bg" data-setbg="/Content/uploads/images/SanPham/@sp.HinhSP">
                                    <ul class="product__hover">
                                        <li><a href="#"><img src="/Content/assets/Public/img/icon/heart.png" loading="lazy"> <span>Yêu thích</span></a></li>
                                        <li>
                                            <a href="#"><img src="/Content/assets/Public/img/icon/compare.png" loading="lazy"> <span>So sánh</span></a>
                                        </li>
                                        <li><a href='@Url.Action("ChiTiet", "SanPham", new { p = sp.TenBV, spid = sp.MaSP })'><img src="/Content/assets/Public/img/icon/search.png" loading="lazy"> <span>Xem ngay</span></a></li>
                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <h6>@sp.TenBV</h6>
                                    <a href='@Url.Action("ThemVaoGio", "GioHang", new { spid = sp.MaSP, pkey = Session["kh-pkey"], r = Request.Url.AbsoluteUri })' class="add-cart">+ Thêm vào giỏ</a>
                                    <div class="rating">
                                        @{
                                            byte rate = 1;
                                            while (rate <= ShopABC_KhachHang.get_Sao_DanhGiaSP(sp.MaSP))
                                            {
                                                <i class="fa fa-star"></i>
                                                rate++;
                                            }
                                        }
                                    </div>
                                    <h5 class="text-danger"><giatien data-money="@String.Format("{0:000}", sp.SauGiamGia)">@String.Format("{0:0,0}", sp.SauGiamGia)</giatien> <u>đ</u></h5>
                                    <div class="product__color__select">
                                        <label for="pc-4">
                                            <input type="radio" id="pc-4">
                                        </label>
                                        <label class="active black" for="pc-5">
                                            <input type="radio" id="pc-5">
                                        </label>
                                        <label class="grey" for="pc-6">
                                            <input type="radio" id="pc-6">
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                     }
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="product__pagination">
                            @{
                                byte first = 1;
                                while (first <= dssp.PageCount)
                                {
                                    if (first == ViewBag.Here)
                                    {
                                        <a class="active" href='@Url.Action(ViewBag.Redirect, "SanPham", new {page = first})'>@first</a>
                                    }
                                    else
                                    {
                                        <a href='@Url.Action(ViewBag.Redirect, "SanPham", new {page = first})'>@first</a>
                                    }
                                    first++;
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shop Section End -->