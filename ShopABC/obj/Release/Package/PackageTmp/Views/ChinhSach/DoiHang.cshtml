            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h4>@ViewBag.Title</h4>
                        <div class="breadcrumb__links">
                            <a href='@Url.Action("Index", "Home")'>Trang chủ</a>
