@using ShopABC.Areas.Dashboard.Models

@{
    ViewBag.Title = "Nhật ký truy cập";
}

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>@ViewBag.Title</h3>
                <p class="text-subtitle text-muted">Trang hiển thị nhật ký truy cập vào hệ thống</p>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href='@Url.Action("Index", "Home")'>Bảng điều khiển</a></li>
                        <li class="breadcrumb-item active">@ViewBag.Title</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <!-- Basic Tables start -->
    <section class="section">
        <div class="card">
            <div class="card-header">
                Nhật ký truy cập
            </div>
            <div class="card-body overflow-auto">
                <table class="table" id="table1">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Địa chỉ IP</th>
                            <th>Thời gian</th>
                            <th>Hành động</th>
                            <th>Nhân viên</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (His i in ShopABC_NhanVien.get_NhatKyTruyCap())
                        {
                            <tr>
                                <td>@i.ID</td>
                                <td>
								@{
                                        if (i.DiaChiIP.Equals("::1") || i.DiaChiIP.Equals("127.0.0.1"))
                                        {
                                            <a href="#">@i.DiaChiIP</a>
                                        }
                                        else
                                        {
                                            <a href="https://api.ipgeolocation.io/ipgeo?apiKey=e5be8a00c1654b84a9064341f0615d3c&ip=@i.DiaChiIP&output=xml" target="_blank">@i.DiaChiIP</a>
                                        }
                                     }
								</td>
                                <td>@i.ThoiGian.Value</td>
                                <td>@i.HanhDong</td>
                                <td>@ShopABC_NhanVien.get_HoTen(i.MaNV)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </section>
    <!-- Basic Tables end -->
</div>

@section More_CSS {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="~/Content/assets/Dashboard/css/pages/datatables.css">
}

@section More_Scripts {
    <script src="https://cdn.datatables.net/v/bs5/dt-1.12.1/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#table1").DataTable();
            $("#table1_filter").wrap("<form>");
            $("#table1_filter").closest("form").attr("autocomplete", "off");
                                        });
    </script>
}



