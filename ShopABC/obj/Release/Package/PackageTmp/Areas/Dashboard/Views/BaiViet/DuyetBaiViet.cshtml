@using ShopABC.Areas.Dashboard.Models

@{
    ViewBag.Title = "Duyệt bài viết";
}

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>@ViewBag.Title</h3>
                <p class="text-subtitle text-muted">Trang hiển thị các bài viết chưa được duyệt</p>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href='@Url.Action("Index", "Home")'>Dashboard</a></li>
                        <li class="breadcrumb-item active">@ViewBag.Title</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <!-- Basic Tables start -->
    <section class="section">
        <div class="card">
            <div class="card-header">
                Dữ liệu bài viết
            </div>
            <div class="card-body overflow-auto">
                <table class="table" id="table1">
                    <thead>
                        <tr>
                            <th>Mã bài viết</th>
                            <th>Tên bài viết</th>
                            <th>Ngày đăng</th>
                            <th>Người đăng</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (BaiViet i in ShopABC_BaiViet.get_BaiViet_ChuaDuyet())
                        {
                            <tr>
                                <td><a href='@Url.Action("ChiTietBaiViet", "BaiViet", new {p = i.TenBV, bvid = i.MaBV, pkey = Session["pkey"]})'>@i.MaBV</a></td>
                                <td>@i.TenBV</td>
                                <td>@i.NgayDang</td>
                                <td>@ShopABC_NhanVien.get_HoTen(i.MaNV)</td>
                                <td>
                                    <button class="btn btn-sm btn-danger btn_HuyBo">Hủy bỏ</button>
                                    <button class="btn btn-sm btn-success btn_DuyetBai">Duyệt bài</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </section>
    <!-- Basic Tables end -->
</div>

@section More_CSS {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="~/Content/assets/Dashboard/css/pages/datatables.css">
}

@section More_Scripts {
    <script src="https://cdn.datatables.net/v/bs5/dt-1.12.1/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#table1").DataTable();
            $("#table1_filter").wrap("<form>");
            $("#table1_filter").closest("form").attr("autocomplete", "off");
            function gettoken() {
                var token = '@Html.AntiForgeryToken()';
                token = $(token).val();
                return token;
            }
            $('.btn_DuyetBai').click(function () {
                $.ajax({
                    url: "/admin/duyet-bai-viet",
                    type: "post",
                    data: {
                        bvid: $(this).parents("tr").find("td:first a").text(),
                        hd: "duyetbai",
                        __RequestVerificationToken: gettoken()
                    },
                    success: function (data) {
                        alert(data);
                        location.reload();
                    },
                    error: function () {
                        alert("Có lỗi xảy ra. Thử lại !");
                        location.reload();
                    }
                });
            });
            $('.btn_HuyBo').click(function () {
                $.ajax({
                    url: "/admin/duyet-bai-viet",
                    type: "post",
                    data: {
                        bvid: $(this).parents("tr").find("td:first a").text(),
                        hd: "huybo",
                        __RequestVerificationToken: gettoken()
                    },
                    success: function (data) {
                        alert(data);
                        location.reload();
                    },
                    error: function () {
                        alert("Có lỗi xảy ra. Thử lại !");
                        location.reload();
                    }
                });
            });
        });
    </script>
}

